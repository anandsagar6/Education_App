<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
   android:background="@color/Dark"
    tools:context=".enterverifyotp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/mail"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/otp_verification"
            android:textSize="20sp"
            android:textColor="@color/coloetextfirst"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"

            android:text="@string/please_enter_the_otp_sent_to_you"
            android:textSize="14sp"
            android:textColor="@color/colorTextsecond"
            />
        <TextView
            android:id="@+id/textmobileshownumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:textColor="@color/coloetextfirst"
            android:textSize="14sp"
            android:textStyle="bold"/>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp1"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp2"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp3"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp4"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />
            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp5"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />

            <EditText
                android:layout_width="40dp"
                android:layout_height="46dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:background="@drawable/backgrounbox"
                android:id="@+id/inputotp6"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/coloetextfirst"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LableFor"
                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn\'t receive tne OTP"
                android:textColor="@color/colorTextsecond"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textresendotp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="RESEND OTP AGAIN"
                android:textSize="15dp"
                android:textColor="@color/coloetextfirst"
                android:textStyle="bold"/>





        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttongetotp"
                android:text="Submit"
                android:textColor="@color/coloetextfirst"
                android:layout_margin="30dp"
                android:textStyle="bold"
                android:background="@drawable/backgroundbutton"/>


            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/progress_verify_otp"
                />



        </FrameLayout>


    </LinearLayout>

</ScrollView>